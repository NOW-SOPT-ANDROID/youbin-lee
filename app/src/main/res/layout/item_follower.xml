<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp">

    <ImageView
        android:id="@+id/img_follower_profile"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginVertical="25dp"
        android:src="@drawable/img_main_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_follower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_follower_email"
        app:layout_constraintStart_toEndOf="@id/img_follower_profile"
        app:layout_constraintTop_toTopOf="@id/img_follower_profile"
        tools:text="이름" />

    <TextView
        android:id="@+id/tv_follower_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/img_follower_profile"
        app:layout_constraintStart_toEndOf="@id/img_follower_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_follower_name"
        tools:text="이메일" />

</androidx.constraintlayout.widget.ConstraintLayout>